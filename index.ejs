<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>local photo browser</title>
  </head>
  <body>
    <style>
      body {
        background: black;
        color: #fff;
      }
      a {
        color: #e0e0e0;
        text-decoration: none;
      }
      a:hover {
        color: #fff;
      }
      html, body, div {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: sans-serif;
      }
      #folders {
        margin-top: 20px;
        max-width: 400px;
        margin: 0 auto;
        position: absolute;
        left: 50%;
        top: 50%;
        margin: 0;
        list-style: none;
        transform: translate(-50%, -50%);
        padding: 30px 60px;
        border-radius: 30px;
        background: rgba(50,50,50, .6);
        line-height: 1.5;
        opacity: 0;
        transition: opacity 600ms;
        max-height: 90%;
        overflow: scroll;
        box-sizing: border-box;
      }
      #folders.fadeIn {
        transition: opacity 200ms;
        opacity: 1;
      }
      #image {
        background-size: contain;
        background-position: 50% 50%;
        background-repeat: no-repeat;
      }
      .parent {
        padding-bottom: .25em;
        padding-right: 1em;
      }
      .parent:only-child {
        padding-bottom: 0;
        transform: translate(0, 3px);
      }
      .parent span {
        font-size: 80%;
        position: relative;
        top: -4px
      }
      .parent + li {
        border-top: solid 1px rgba(255,255,255,.3);
        padding-top: .75em;
      }
    </style>

    <% if(folders.length || canGoUp){ %>
      <ul id="folders">
      <% if(canGoUp){ %>
        <li class="parent"><a href="../">â†© <span>parent folder</span></a></li>
      <% } %>
      <% if(folders.length){ 
          for(var i = 0, l = folders.length; i<l; i++) { %>
        <li><a href="./<%- folders[i] %>/"><%- folders[i] %></a></li>
      <%  }
         }
      %>
      </ul>
    <% } %>
    <% if(files){ %>
      <div id="image"></div>
    <% } %>

    </div>

    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script>
      <% if(folders){ %>
        var folders = [<% for(var i = 0, l = folders.length; i<l; i++) { %>'<%- folders[i] %>',
        <% } %>];
      <% } %>
      <% if(files){ %>
        var files = [<% for(var i = 0, l = files.length; i<l; i++) { %>'<%- files[i] %>',
        <% } %>];
      <% } %>

      var hideFolders = null,
          commandIsDown = false,
          currentImage = 0,
          justLeft = false;

      function renderImage(index){
        if(index >= files.length) currentImage = 0;
        if(index < 0) currentImage = files.length - 1;
        //console.log('render '+escape(files[currentImage]));
        $('#image').css('background-image', 'url('+escape(files[currentImage])+')');
      }

      $('html').mousemove(function(e){
        if(!$('#folders').hasClass('fadeIn') && !justLeft) {
          $('#folders').addClass('fadeIn');
          clearTimeout(hideFolders);
          hideFolders = setTimeout(function(){
            $('#folders').removeClass('fadeIn');
          }, 3000);
        }
      });
      $('#folders').mouseleave(function(e){
        justLeft = true;
        $('#folders').removeClass('fadeIn');
        setTimeout(function(){
          justLeft = false;
        }, 500);
      });
      $('html').keydown(function(e){
        // console.log(e.which);
        if(e.which === 91) commandIsDown = true;
      });
      $('html').keyup(function(e){
        if(e.which === 91) commandIsDown = false;
        if(!commandIsDown) {
          if(e.which === 39){ // right arrow
            renderImage(++currentImage);
          } else if (e.which === 37) { // left arrow
            renderImage(--currentImage);
          }
        }
      });

      renderImage(currentImage);


    </script>
  </body>
</html>